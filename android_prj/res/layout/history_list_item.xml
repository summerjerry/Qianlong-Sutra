<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <Button
        android:id="@+id/history_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:background="@drawable/history_item_btn_bg"
        android:padding="3dp" />

    <TextView
        android:id="@+id/txt_index_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@id/history_delete_btn"
        android:paddingBottom="19dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="19dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sutra_title_size" />

</RelativeLayout>